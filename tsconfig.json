{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@playground/*": [
        "playground/*"
      ],
      "@start-database/*": [
        "playground/@start-database/*"
      ]
    },
  },
  "include": ["playground", "@types", "playground/@start-database"],
  "ts-node": {
    "files": true
  }
}