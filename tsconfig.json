{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "db": [
        "playground/@configs/db.ts"
      ],
      "@playground/*": [
        "playground/*"
      ]
    },
  },
  "include": ["playground"]
}