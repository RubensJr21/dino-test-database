{
  "name": "dino-test-database",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "playground": "cd ./playground/ && ts-node -r tsconfig-paths/register",
    
    "database:push": "drizzle-kit --config drizzle.config.ts push",
    "database:start": "ts-node -r tsconfig-paths/register @database/create",
    "database:build": "npm run database:push && npm run database:start",
    
    "predatabase:reset": "npm run database:clean && npm run database:push",
    "database:reset": "ts-node -r tsconfig-paths/register @database/create",
    
    "database:clean": "ts-node -r tsconfig-paths/register @database/clean",
    
    "ts-check": "tsc --noEmit"
  },
